		</replaceFile>
	</target>
	
    <!-- 打包成jar -->       
    <target name="spark_cache" depends="spark_cache_class" description="make .jar file">   
        <jar destfile="release/spark_cache.jar" basedir="release\web\WEB-INF\classes" compress="true" >    
        	<fileset dir="lib">
				<include name="**/*.jar" />
			</fileset>
        </jar>  
    </target>   
	
